            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioButtonFis11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/oria"
                android:text="Bai" />

